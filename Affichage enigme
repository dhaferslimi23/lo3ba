void affichEnigme(int x , SDL_Surface*screen , *image , SDL_Rect positionecran){
switch (x) {
	case 0 :
		image =SDL_LoadBMP("0.bmp");
		SDL_BlitSurface(image,NULL,screen,&positionecran);
		SDL_Flip(screen);
	break;
	
	case 1 : 
		image=SDL_LoadBMP("1.bmp");
		SDL_BlitSurface(image,NULL,screen,&positionecran);
		SDL_Flip(screen);
	break;
	
	case 2 :
		image=SDL_LoadBMP("2.bmp");
		SDL_BlitSurface(image,NULL,screen,&positionecran);
		SDL_Flip(screen);
	break;
}
SDL_FreeSurface(image);
}
